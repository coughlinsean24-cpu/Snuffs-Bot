# ================================================
# TASTYTRADE API CREDENTIALS
# ================================================
TASTYTRADE_USERNAME=your-username
TASTYTRADE_PASSWORD=your-password

# Environment (sandbox or production)
TASTYTRADE_ENVIRONMENT=sandbox

# API URLs
TASTYTRADE_CERT_URL=https://api.cert.tastyworks.com
TASTYTRADE_PROD_URL=https://api.tastyworks.com

# Trading Configuration
DEFAULT_ACCOUNT=your-account-number
PAPER_TRADING=true

# ================================================
# ANTHROPIC CLAUDE API CONFIGURATION
# ================================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.7

# ================================================
# DATABASE CONFIGURATION
# ================================================
DATABASE_URL=postgresql://trader:password@localhost:5432/trading_db
DATABASE_POOL_SIZE=5

# ================================================
# REDIS CONFIGURATION
# ================================================
REDIS_URL=redis://localhost:6379/0

# ================================================
# LOGGING
# ================================================
LOG_LEVEL=INFO
LOG_FILE=snuffs_bot.log

# ================================================
# CAPITAL CONFIGURATION
# ================================================
STARTING_CAPITAL=100000.0
LIVE_TRADING_ENABLED=false

# ================================================
# 0DTE TRADING CONFIGURATION
# ================================================
ENABLE_PAPER_TRADING_SIMULATOR=true
PAPER_TRADE_PERCENTAGE=0.5

# ================================================
# RISK MANAGEMENT
# ================================================
MAX_DAILY_LOSS=500.0
MAX_POSITION_SIZE=5000.0
MAX_CONCURRENT_POSITIONS=3
RISK_PER_TRADE_PERCENT=0.04

# ================================================
# 0DTE STRATEGY PARAMETERS
# ================================================
MIN_PROFIT_TARGET=0.15
MAX_STOP_LOSS=0.25
TRADING_START_TIME=09:35
TRADING_END_TIME=12:00
WING_WIDTH=5
DELTA_TARGET=0.10

# ================================================
# DASHBOARD CONFIGURATION
# ================================================
DASHBOARD_PORT=8501
DASHBOARD_AUTO_REFRESH_SECONDS=5

# ================================================
# AI LEARNING CONFIGURATION
# ================================================
ENABLE_CONTINUOUS_LEARNING=true
LEARNING_CONTEXT_WINDOW=10
